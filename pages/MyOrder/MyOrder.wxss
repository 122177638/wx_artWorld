/* pages/MyApplication/MyApplication.wxss */
.MyApplication_container{
   font-family: PingFangSC-Medium, sans-serif;
}
.swiper-tab{
  width: 100%; 
  text-align: center; 
  display: -webkit-flex;
  display: flex;
  height:84rpx;
  line-height: 84rpx;
  border-bottom: 6rpx solid #f3f3f3;
}
.swiper-tab-list{
  font-size: 34rpx; 
  color: #333333; 
  width:calc(100%/3);
  position: relative;
}

.on{
  color:#ed3439;
}
.on::before{
  content:'';
  position: absolute;
  bottom: 0rpx;
  width:120rpx;
  left:50%;
  margin-left:-60rpx;
  height:3rpx;
  background:#ed3439;
}
.swiper-box{ 
  display: block;
  height: 100%;
  width: 100%;
  background:#ffffff;
 }

.item_container{padding-bottom: 50rpx;}
.point{padding:50rpx;text-align: center;font-size:32rpx;color:#333333;}
 /* 待付款  */
 .stayPayment_item{
    padding:30rpx 30rpx 0rpx;
    border-bottom: 20rpx solid #F3F3F3;
 }
 .stayPayment_title{display: flex;justify-content: space-between;align-items: center;}
 .title_left{font-size:32rpx; color:#333333;}
 .title_right{
    width:82rpx;
    height:35rpx;
    margin-right:20rpx;
    border:2rpx solid #ed3439;
    font-size:24rpx;
    color:#ed3439;
    text-align: center;
    line-height: 35rpx;
    border-radius: 70rpx;
 }
 .stayPayment_content{padding:30rpx 100rpx 30rpx 0;border-bottom: 2rpx solid #f3f3f3;}
 .stayPayment_content view{margin-bottom: 18rpx;font-size:24rpx;color:#707070;word-break: break-all;word-wrap: break-word;}
 .stayPayment_content view:nth-child(1){font-size:26rpx;color:#333333;}
 .stayPayment_content view:last-child{margin-bottom: 0;}
 .stayPayment_content view:last-child text{font-size:24rpx;color:#ed3439;}
 .stayPayment_foot{padding:20rpx 0; text-align: right;}
 .stayPayment_btn{font-size:30rpx;color:#1f8ae3;display: inline-block}
 .Receivables_foot{padding:18rpx 0;text-align: right;}
 .Receivables_btn{
    width:174rpx;
    height:54rpx;
    background-color:#ED3439;
    border-radius: 10rpx;
    font-size:26rpx;
    color:#ffffff;
    text-align: center;
    line-height: 54rpx;
    display: inline-block;
 }
 .End_btn{
    width:174rpx;
    height:54rpx;
    background-color:rgba(0, 0, 0, 0.5);
    border-radius: 10rpx;
    font-size:26rpx;
    color:#ffffff;
    text-align: center;
    line-height: 54rpx;
    display: inline-block;
 }