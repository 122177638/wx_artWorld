/* 弹窗  */
.select_container{
   width:100%;
   height:100%;
   position: fixed;
   top:0;
   left:0;
   z-index: 100;
   background-color:rgba(0, 0, 0, 0.5);
}
.select_wrap{
   position: absolute;
   bottom:0;
   width:100%;
}
@keyframes Bmove{0%{bottom:-500rpx}100%{bottom:0}}
.select_wrap .select_btn:nth-child(1){border-top-right-radius: 10rpx;border-top-left-radius: 10rpx;}
.select_wrap .select_btn:nth-child(2){border-radius: 0;}
.select_wrap .select_btn:nth-child(3){border-bottom-right-radius: 10rpx;border-bottom-left-radius: 10rpx;}
.select_wrap .select_btn:nth-child(4){
   border-top:10rpx solid #e8e8e8;
   border-radius: 10rpx;
}
.select_btn{
   width:100%;
   height:100rpx;
   line-height: 100rpx;
   text-align: center;
   background-color:#ffffff;
   font-size:30rpx;
   color:#000000;
}
/* 聊天  */
.chat_container{
   position: fixed;
   bottom:0;
   left:0;
   width:100%;
   background-color:#ffffff;
   overflow: hidden;
   z-index: 97;
}
.chat_box{
   width:100%;
   border-top:2rpx solid #d8d8d8;
   display: flex;
   align-items:center;
   justify-content: center;
   overflow: hidden;
}
.chatEnd_btn{
   margin-left:20rpx;
   padding:20rpx;
   font-size:32rpx;
   color:#1f8ae3;
}
.chat_import{
   padding:20rpx 0;
}
.importMsg{
   border:2rpx solid #d8d8d8;
   border-radius:10rpx;
   width:540rpx;
   background-color:#f3f3f3;
   font-size:32rpx;
   padding-left:20rpx;
   box-sizing: border-box;
   height:70rpx;
}
