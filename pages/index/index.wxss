/**index.wxss**/
/* tabbar切换 */
.index_header{
  padding:20rpx 0;
  border-bottom: 20rpx solid #e1e1e1;
}
.swiper-tab{
  width: 100%; 
  display: flex;
  justify-content: center;
}
.swiper-tab-list{
  width:30rpx;
  height:30rpx;
  border-radius:70rpx;
  background-color: #989898;
}
.swiper-tab-list:nth-child(1){margin-right:20rpx;}
.on{
  background-color: #DE252F;
}
.swiper-box{ 
  display: block;
  height: 100%;
  width: 100%;
 }

/* 服务类型  */
.service_items{
  display:grid;
  grid-template-columns: repeat(6,auto);
  grid-template-rows:repeat(2,130rpx);
  grid-gap:20rpx; 
}
.service_items .item{
  display: flex;
  flex-direction: column;
  text-align: center;
}
.service_items .item text{
  font-size:32rpx;
  color:#222222;
}
.item_icon{
  width:80rpx;
  height:80rpx;
  margin:0 auto;
}

/*人气艺人  */

.Performers_items{
  display: flex;
  overflow: scroll;
}
.Performers_items .item{
  display: flex;
  width:200rpx;
  flex-direction: column;
  text-align: center;
  padding-right:20rpx;

}
.Performers_icon{
  width:150rpx;
  height:200rpx;
}