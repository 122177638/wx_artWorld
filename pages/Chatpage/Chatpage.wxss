/* pages/Chatpage/Chatpage.wxss */
.Chatpage_container{ font-family: PingFangSC-Medium, sans-serif;overflow: hidden;}
.Chatpage_content{
   background-color:#ececec;
}
.Chatpage_point{
   padding-top:26rpx;
   font-size:24rpx;
   color:#707070;
   text-align: center;
}
.Chatpage_point text{color:#ed3439;}



.Chatpage_list{padding:40rpx 20rpx 100rpx;}
/* You  */
.You_Chatpage_item{padding:0rpx 120rpx 40rpx 0;display:flex; width:100%;box-sizing:border-box;}
.YouPortraitBox{margin-right:28rpx;}
.YouPortrait{width:80rpx;height:84rpx;}
.You_MsgContent_audio{
   display: flex;
   align-items: center;
}
/* 482-120  */
.You_yuyin_content{width:120rpx;} 
.You_yuyin_icon{width:35rpx;height:42rpx;}
.You_audioTime{font-size:32rpx;color:#333333;padding-left:20rpx;}
.You_MsgContent{
   font-family: PingFangSC-Medium, sans-serif;
   padding:20rpx;
   background-color:#ffffff;
   border-radius:10rpx;
   font-size:28rpx;
   color:#333333;
   word-wrap: break-word;
   word-break: break-all;
   text-align:justify; 
   letter-spacing:0rpx;
   display: flex;
   align-items: center;
   box-sizing: border-box;
   position: relative;
   z-index: 1;
   line-height:1.25;
}

.You_MsgContent::before{
  content:'';
  width:0;
  height:0;
  display: inline-block;
  position: absolute;
  left:-55rpx;
  z-index: -1;
  top:0;
  border:40rpx solid transparent;
  border-right-color:#ffffff;  
}

/* My  */
.My_yuyin_content{width:120rpx;display: flex;justify-content:flex-end;}
.My_Chatpage_item{padding:0rpx 0rpx 40rpx 120rpx;display: flex;justify-content: flex-end;}
.MyPortraitBox{margin-left:28rpx;}
.MyPortrait{width:80rpx;height:84rpx;}
.My_MsgContent_audio{
   display: flex;
   align-items: center;
}
.My_yuyin_icon{width:35rpx;height:42rpx;}
.My_audioTime{font-size:32rpx;color:#333333;padding-right:20rpx;}
.My_MsgContent{
   font-family: PingFangSC-Medium, sans-serif;
   padding:20rpx;
   background-color:#a0e759;
   border-radius:10rpx;
   font-size:28rpx;
   color:#333333;
   display: flex;
   text-align:justify; 
   letter-spacing:-0.5rpx;
   align-items: center;
   word-wrap: break-word;
   word-break: break-all;
   box-sizing: border-box;
   position: relative;
   z-index: 1;
   line-height:1.25;
}
.My_MsgContent::after{
  content:'';
  width:0;
  height:0;
  display: inline-block;
  position: absolute;
  right:-55rpx;
  top:0;
  border:40rpx solid transparent;
  border-left-color: #a0e759; 
  z-index: -1; 
}

/* 底部输入  */
.font_container{
   position: fixed;
   bottom:0;
   left:0;
   width:100%;
   background-color:#f3f3f3;
   overflow: hidden;
   z-index: 99;
}
.font_import_box{
   width:100%;
   border-top:2rpx solid #d8d8d8;
   display: flex;
   align-items:flex-end;
   overflow: hidden;
}
.yuyinbtn{width:56rpx;height:56rpx;padding:20rpx;}
.voiceBtn{
   width:538rpx;
   height:72rpx;
   border-radius: 10rpx;
   border:2rpx solid #e1e1e1;
   font-size:32rpx;
   color:#707070;
   text-align: center;
   line-height: 70rpx;
   box-sizing: border-box;
   margin:15rpx 0;
   background-color:#ffffff;
}
.importMsg{width:538rpx;height:70rpx;padding:0 8rpx;box-sizing: border-box;border:2rpx solid #e1e1e1;border-radius: 10rpx;font-size:32rpx;color:#707070;margin:15rpx 0;line-height:0.1;word-break:break-all;word-wrap:break-word;background-color:#ffffff;}
.enterBtn{
   font-size:34rpx;
   color:#707070;
   padding:24rpx;
   line-height: normal;
   background-color:transparent;
}
.enterBtn::after{border:none;}
/* 语音录制弹窗  */
.RecordAudio_tc{
   width:300rpx;
   height:300rpx;
   position: fixed;top:50%;left:50%;
   margin-top:-250rpx;margin-left:-150rpx;
   background-color:rgba(0,0,0,0.5);
   z-index: 22;
   border-radius: 10rpx;
   display: flex;
   flex-direction: column;
   justify-content: center;
   align-items: center;
}
.RecordAudio_point_icon{
   width:100rpx;height:150rpx;padding-bottom: 30rpx;padding-top:40rpx;
}
.RecordAudio_point{
   font-size:28rpx;
   color:#ffffff;
}