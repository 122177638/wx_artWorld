/* pages/NeedsDetails/NeedsDetails.wxss */
.OrderDetails_title{
   padding:10rpx 30rpx;
   font-size:30rpx;
   color:#333333;
   background-color:#f3f3f3;
   display: flex;
   justify-content: space-between;
}
.title_right{display: flex;align-items: center;}
.title_right view:nth-child(1){margin-right:14rpx;}
.OrderDetails_userMsg{ padding:20rpx 30rpx;font-size:28rpx;color:#333333;display: flex;align-items: center;}
.userPortrait{width:66rpx;height:66rpx;border-radius: 50%;margin-right:15rpx;}
.OrderDetails_content{padding:0 30rpx;font-size:24rpx;color:#707070;}
.content_title{display: flex;justify-content: space-between;padding:24rpx 0;}
.content_title view:nth-child(1){font-size:28rpx;color:#333333;}
.content_title view:nth-child(2){width:82rpx;height:34rpx;border:2rpx solid #ed3439;font-size:24rpx;color:#ed3439;text-align: center;line-height:34rpx;margin-right:20rpx;border-radius: 70rpx;}
.content_row{font-size:26rpx;color:#333333;padding-right:100rpx;margin-bottom:18rpx;}
.content_line{margin-bottom: 18rpx;}
.red{color:#ed3439;}

.xiala_icon{width:26rpx;height:20rpx;}
.invoice_wrap{padding:30rpx;display: flex;justify-content: flex-end;}
.invoice_wrap view:nth-child(1){margin-right:20rpx;}
.invoice_wrap view{
   width:120rpx;
   height:54rpx;
   line-height: 54rpx;
   text-align: center;
   border:2rpx solid #333333;
   font-size:28rpx;
   color:#000000;
   border-radius: 10rpx;
}

.NeedsApply_container{padding:24rpx 30rpx;border-top:20rpx solid #f3f3f3;}
.NeedsApply_point{font-size:32rpx;color:#333333;}

.NeedsApply_item{display: flex;justify-content: space-between;align-items: center; padding:30rpx 0;border-bottom:3rpx solid #f3f3f3;}
.item_left{display: flex;align-items: center;}
.item_right{
    width:120rpx;
   height:54rpx;
   line-height: 54rpx;
   text-align: center;
   border:2rpx solid #333333;
   font-size:28rpx;
   color:#000000;
   border-radius: 10rpx;
}
.Apply_portriat{width:84rpx;height:84rpx;vertical-align: middle;border-radius: 50%;}
.item_msg{display: flex;flex-direction: column;margin-left:20rpx;}
.item_msg view:nth-child(1){font-size:30rpx;color:#333333;margin-bottom:14rpx;}
.item_msg view:nth-child(2){font-size:26rpx;color:#707070;}

.form_ticket{border-bottom:2rpx solid #d8d8d8;}
.ticket_box{margin:0 30rpx;padding-bottom:30rpx;}
.ticket_list{background-color:#f3f3f3;padding:20rpx;font-size:28rpx;color:#707070;}

/* 弹窗  */
.tc_bg{
   width:100%;
   height:100%;
   background-color:rgba(0, 0, 0, 0.5);
   position: fixed;
   top:0;
   left:0;
}
.tc_container{
   position: absolute;
   width:610rpx;
   top:50%;
   left:50%;
   transform: translate(-50%,-50%)
}
.tc_content{
   width:610rpx;
   background-color:#ffffff;
   border-radius: 15rpx;
}
.tc_title{
   padding:48rpx 0 40rpx;
   font-size:34rpx;
   font-weight: 600;
   color:#333333;
   text-align: center;
}
.tc_point_content{
   padding:0 40rpx 50rpx;
   font-size:32rpx;
   color:#333333;
   text-align: center;
}
.tc_foot{
   display: flex;
   justify-content: space-between;
   padding-top:34rpx;
}
.tc_cancel_btn{
   width:290rpx;
   height:80rpx;
   line-height: 80rpx;
   background-color:#ed3439;
   text-align: center;
   border-radius: 15rpx;
   font-size:32rpx;
   color:#ffffff;
}
.tc_Determine_btn{
   width:290rpx;
   height:80rpx;
   line-height: 80rpx;
   background-color:#ffffff;
   text-align: center;
   border-radius: 15rpx;
   font-size:32rpx;
   color:#333333;
}
