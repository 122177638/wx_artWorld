/* pages/MyNews/MyNews.wxss */
.MyNews_container{
   font-family: PingFangSC-Medium, sans-serif;
}
.swiper-tab{
  width: 100%; 
  text-align: center; 
  display: -webkit-flex;
  display: flex;
  height:84rpx;
  line-height: 84rpx;
  border-bottom: 6rpx solid #f3f3f3;
}
.swiper-tab-list{
  font-size: 34rpx; 
  color: #222222; 
  width:calc(100%/2);
  position: relative;
}

.on{
  color:#ed3439;
}
.on::before{
  content:'';
  position: absolute;
  bottom: 0rpx;
  width:200rpx;
  left:50%;
  margin-left:-100rpx;
  height:3rpx;
  background:#ed3439;
}
.swiper-box{ 
  display: block;
  height: 100%;
  width: 100%;
  background:#ffffff;
