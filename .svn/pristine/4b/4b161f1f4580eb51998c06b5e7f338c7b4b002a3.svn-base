/* pages/myMessage/myMessage.wxss */
.myMessage_container{
   font-family: PingFangSC-Medium, sans-serif;
}
.myMessage_top{
   border-bottom:8rpx solid #f3f3f3;
}
.myMessage_header{
   display: flex;
   align-items: center;
   padding-top:38rpx;
   padding-bottom: 28rpx;
   border-bottom: 1rpx solid #d8d8d8;
}
.userPortrait{width:140rpx;height:140rpx;margin-left:30rpx;border-radius: 50%;margin-right:20rpx;}
.userMsg .userName{padding-bottom: 38rpx;font-size:34rpx;color:#000000;}
.userMsg .userOccupation{font-size:28rpx;color:#000000;}
.userPagelist{
   margin-top:36rpx;
   margin-bottom: 50rpx;
   display: flex;
}
.userPagelist .list{width:calc(100%/3);text-align: center;position:relative;font-size:26rpx;color:#333333;}
.userHome::before,.userAnnouncement::before{
   content: '';
   width:2rpx;
   height:80rpx;
   position: absolute;
   background-color:#d8d8d8;
   top:0;right:0;
}
.itemAfter::after,.MypageAfter::after{
   content: '';
   width:20rpx;
   height:20rpx;
   display: inline-block;
   background-color:#ed3439;
   border-radius: 50%;
   position: absolute;
   box-sizing: border-box;
}
.itemAfter::after{right:30%;bottom:30%;}

.PagelistIcon{
   width:56rpx;
   height:56rpx;
   padding-bottom: 26rpx;
}
.userMypages{padding-left:30rpx;}
.Mypage{
   padding:38rpx 0px 30rpx;
   border-bottom: 2rpx solid #d8d8d8;
   display: flex;
   justify-content: space-between;
   align-items: center;
   position: relative;
}
.MypageAfter::after{left:30%;top:50%;margin-top:-10rpx;}
.Mypage view{display: flex;align-items: center;}

.Mypage .Mypage_left{font-size:30rpx; color:#333333;}
.Mypage .Mypage_right{font-size:26rpx;color:#333333;}
.Mypage_icon{
   width:38rpx;
   height:38rpx;
   padding-right:34rpx;
}
.Mypage_icon_ss{width:18rpx;height:30rpx;padding:0 20rpx;}
.butBtn{
   margin:0;
   border-radius: 0;
   line-height: 1.4;
   background-color:#ffffff;
}
.butBtn::after{border:none;}