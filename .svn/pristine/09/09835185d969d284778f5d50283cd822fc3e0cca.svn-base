/* pages/invoice/invoice.wxss */
/* form  */
.form_item{border-bottom:2rpx solid #d8d8d8;padding:30rpx;display: flex;justify-content: space-between;align-items: center;}
.reduce,.plus{
   width:66rpx;
   height:66rpx;
   line-height: 66rpx;
   background-color:#f3f3f3;
   color:#333333;
   text-align: center;
   font-size:48rpx;
}
.Company{
   border:2rpx solid #d8d8d8;
   width:66rpx;
   height:66rpx;
   line-height: 66rpx;
   text-align: center;
   margin:0 30rpx;
}
.C_text{margin-left:20rpx;}
.item_left{font-size:32rpx;color:#333333;}
.item_right{display: flex;align-items: center;font-size:30rpx;}
.item_right label:nth-child(1){margin-right:50rpx;}
.item_right input{width:450rpx;text-align: right;color:#707070;}
.form_point{font-size:24rpx;color:#707070;padding:30rpx;}

.form_btn{
   width:100%;
   height:90rpx;
   line-height: 90rpx;
   margin:0;
   padding:0;
   position: fixed;
   left:0;
   bottom:0;
   z-index: 99;
   background-color:#ed3439;
   color:#ffffff;
   border-radius: 0;
   font-size:36rpx;
}
radio{transform:scale(0.8);}