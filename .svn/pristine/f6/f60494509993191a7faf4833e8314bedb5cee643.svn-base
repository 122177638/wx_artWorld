/* pages/NeedsEndDetails/NeedsEndDetails.wxss */
.OrderDetails_container{font-family: PingFangSC-Medium, sans-serif;}
.OrderDetails_title{
   padding:10rpx 30rpx;
   font-size:30rpx;
   color:#333333;
   background-color:#f3f3f3;
   display: flex;
   justify-content: space-between;
}
.OrderDetails_userMsg{ padding:20rpx 30rpx;font-size:28rpx;color:#333333;display: flex;align-items: center;}
.userPortrait{width:66rpx;height:66rpx;border-radius: 50%;margin-right:15rpx;}
.OrderDetails_content{padding:0 30rpx;font-size:24rpx;color:#707070;}
.content_title{display: flex;justify-content: space-between;padding:24rpx 0;}
.content_title view:nth-child(1){font-size:28rpx;color:#333333;}
.content_title view:nth-child(2){width:82rpx;height:34rpx;border:2rpx solid #ed3439;font-size:24rpx;color:#ed3439;text-align: center;line-height:34rpx;margin-right:20rpx;border-radius: 70rpx;}
.content_row{font-size:26rpx;color:#333333;padding-right:100rpx;margin-bottom:18rpx;}
.content_line{margin-bottom: 18rpx;}
.red{color:#ed3439;}
.CScolor{color:#1f8ae3;}

.invoice_content{padding:30rpx;font-size:24rpx;color:#707070;}
.invoice_content text:nth-child(1){text-align: justify;display: inline-block;width:130rpx;text-align-last: justify;}

.end_wrap{
    width:70%;
    height:70rpx;
    line-height: 70rpx;
    border-radius: 10rpx;
    background-color:#ed3439;
    color:#fff;
    font-size:28rpx;
    text-align: center;
    margin:50rpx auto;    
 }