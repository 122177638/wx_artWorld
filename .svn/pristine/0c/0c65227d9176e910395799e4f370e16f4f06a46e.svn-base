        wx.navigateBack();
      } else {
        prevPage.setData({
          GGdetails: that.data.itemArr,
          GGBJend: '修改'
        });
        wx.navigateBack();
      }
    }

    if (that.data.BJmoshi == 'YHJJPBJ') {
      if (that.data.itemArr == '') {
        prevPage.setData({
          YHJJPdetails: that.data.itemArr,
          YHJBJend: '编辑'
        });
        wx.navigateBack();
      } else {
        prevPage.setData({
          YHJJPdetails: that.data.itemArr,
          YHJBJend: '修改'
        });
        wx.navigateBack();
      }
    } 
