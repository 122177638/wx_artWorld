<!--pages/setDetails/setDetails.wxml-->
<view class="setGG">
  <view class="GGpoint">
      <text wx:if="{{BJmoshi == 'GGBJ'}}">用户在抢红包时会先阅读该广告详情，请在此认真介绍您的广告或服务带来更好的广告效果</text>
      <text wx:elif="{{BJmoshi == 'JPBJ'}}">请认真说明你的奖品详情，方便用户理解</text>
      <text wx:elif="{{BJmoshi == 'YHJJPBJ'}}">请认真说明你的奖品详情，方便用户理解</text>
  </view>
  <view class="items" wx:for="{{itemArr}}" wx:key="id" wx:for-index="idx" wx:for-item="itemName">
  
    <view class="item" wx:if="{{itemName.category == text}}">
      <image src="../../images/btn_shangyi.png"  class="shangyi yidong" bindtap="onshangyi" data-index="{{itemName.id}}" style="display:{{itemName.shangyi?'none':'block'}}"></image>
      <textarea placeholder="{{BJmoshi != 'GGBJ'?'请描述奖品详情,如:兑奖时间、地址等':'请添加广告文字说明'}}" data-id='{{itemName.id}}' bindinput='getText' class="importTxt" value='{{itemName.text}}'></textarea>
      <text style="display:none">{{itemName.tid}}</text>
      <image src="../../images/btn_xiayi.png" class="xiayi yidong" bindtap="onxiayi" data-index="{{itemName.id}}" style="display:{{itemName.xiayi?'none':'block'}}"></image>
      <image src="../../images/btn_shanchu.png" class="delet" bindtap='delet' data-index="{{itemName.id}}"></image>
    </view>

     <view class="item" wx:if="{{itemName.category == textImg}}">
      <image src="../../images/btn_shangyi.png" class="shangyi yidong" bindtap="onshangyi"  data-index="{{itemName.id}}" style="display:{{itemName.shangyi?'none':'block'}}"></image>
      <view class="content">
        <image src="{{itemName.imgURL}}" class="addImg"></image>
        <textarea placeholder="{{BJmoshi != 'GGBJ'?'请描述奖品详情,如:兑奖时间、地址等':'请添加广告文字说明'}}" class="PimportTxt" data-id='{{itemName.id}}' bindinput='getText' value='{{itemName.text}}'></textarea>
        <text style="display:none">{{itemName.tid}}</text>
      </view>
      <image src="../../images/btn_xiayi.png" class="xiayi yidong" bindtap="onxiayi" data-index="{{itemName.id}}"  style="display:{{itemName.xiayi?'none':'block'}}"></image>
      <image src="../../images/btn_shanchu.png" class="delet" bindtap='delet' data-index="{{itemName.id}}"></image>
    </view> 
  </view>
  <view class="addItem">
    <image src="../../images/img_tianjiatupian.png " bindtap='additem' class="addItemBtn"></image>
  </view>
   <view class="F_pot">
    <view class="btnBox">
        <view class="yulan" bindtap='navigataTodetails'>预览</view>
        <view class="wancheng" bindtap='navigataToGoback'>完成</view>
    </view>
  </view> 
</view>
